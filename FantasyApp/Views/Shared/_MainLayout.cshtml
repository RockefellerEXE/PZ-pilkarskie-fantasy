<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="~/css/site.css" rel="stylesheet" />
	<title>@ViewBag.Title - Piłkarskie Fantasy</title>
</head>
<body>

	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="@Url.Action("Index", "Home")">Strona główna</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				@(await Component.InvokeAsync("Menu"))

			</div>
		</div>
	</nav>
	<div class="container-fluid text-center">
		<div class="row content">
			<div class="col-sm-8 text-left" id="main">
				@RenderBody()
			</div>
		</div>
	</div>
	<footer class="container-fluid text-center">
		@*<a href="@Url.Action("FooterSites", "Home", new { name = "Onas" })">O nas</a>
		<a href=" @Url.Action("FooterSites", "Home", new { name = "Regulamin" })">Regulamin</a>
		<a href="@Url.Action("FooterSites", "Home", new { name = "Kontakt" })">Kontakt</a>*@
	</footer>
	@RenderSection("Scripts", false)
</body>
</html>