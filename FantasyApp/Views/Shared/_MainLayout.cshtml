<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title - Piłkarskie Fantasy</title>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Strona główna</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                @(await Component.InvokeAsync("Menu"))
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row content">
            <!-- Główna treść po lewej stronie -->
            <div class="col-sm-8 col-xs-12" id="main">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="container-fluid text-center">
        @* Zawartość stopki (można dodać odnośniki itp.) *@
    </footer>

    @RenderSection("Scripts", false)
</body>
</html>
