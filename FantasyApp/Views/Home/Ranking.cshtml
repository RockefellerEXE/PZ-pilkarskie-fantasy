@model IEnumerable<FantasyApp.Models.Uzytkownik>

@{
    ViewData["Title"] = "Ranking";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/ranking.css" rel="stylesheet" />
</head>
<body>
    <main class="main-content">
        <h1>Ranking Użytkowników</h1>

        <div class="ranking-table-wrapper">
            <table class="ranking-table">
                <thead>
                    <tr>
                        <th>Miejsce</th>
                        <th>Login</th>
                        <th>Punkty</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int miejsce = 1; // Zmienna do numeracji
                        foreach (var uzytkownik in Model)
                        {
                            <tr>
                                <td>@(miejsce++)</td>
                                <td>@uzytkownik.Login</td>
                                <td>@uzytkownik.Punkty</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">Brak użytkowników do wyświetlenia.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <script src="~/js/ranking.js"></script>
</body>
</html>
