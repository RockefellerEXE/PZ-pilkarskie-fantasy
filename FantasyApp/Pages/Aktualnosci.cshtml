@page
@model FantasyApp.Pages.AktualnosciModel
@{
	<h1>Aktualności</h1>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aktualności</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .header {
            background-color: #89c44a;
            padding: 10px 20px;
            color: white;
            text-align: center;
        }
        .container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
        }
        .table-section {
            width: 48%;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }
        .pagination button {
            background-color: #ddd;
            border: none;
            padding: 5px 10px;
            margin: 0 2px;
            cursor: pointer;
        }
        .pagination button.active {
            background-color: #89c44a;
            color: white;
        }
        .pagination button:hover {
            background-color: #ccc;
        }
        img {
            max-width: 100%;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Aktualności</h1>
    </div>
    <div class="container">
        <div class="table-section">
            <h2>Zmiany cen zawodników</h2>
            <img src="https://via.placeholder.com/400x200?text=Tabela+zmian+cen" alt="Tabela zmian cen">
            <div class="pagination">
                <button class="active">1</button>
                <button>2</button>
                <button>3</button>
                <button>...</button>
                <button>10</button>
            </div>
        </div>
        <div class="table-section">
            <h2>Najważniejsze tweety</h2>
            <img src="https://via.placeholder.com/400x200?text=Tabela+tweetów" alt="Tabela tweetów">
            <div class="pagination">
                <button class="active">1</button>
                <button>2</button>
                <button>3</button>
                <button>...</button>
                <button>10</button>
            </div>
        </div>
    </div>
</body>
</html>