@page
@model FantasyApp.Pages.Budowanie_zespoluModel

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budowanie zespołu</title>
    <link href="~/css/budowanie_zespolu.css" rel="stylesheet" />
    <script src="~/js/budowanie_zespolu.js"></script>
</head>
<body>
    <div class="container">
        <!-- Przyciski nawigacji -->
        <div class="button-group">
            <button class="nav-button active" onclick="showSection('team')">Wybór zespołu</button>
            <button class="nav-button" onclick="showSection('points')">Punkty</button>
            <button class="nav-button" onclick="showSection('transfers')">Transfery</button>
        </div>

        <!-- Sekcja: Wybór zespołu -->
        <div id="team" class="content-section active">
            <h1>Wybierz swój zespół</h1>
            <h4> ###Nazwa zespołu###</h4>
            <div class="team-layout">
                <img src="https://tortytorty.pl/18308-medium_default/boisko-wydruk-na-oplatku.jpg" alt="Boisko" class="team-image" />
                <div class="bench">
                    <h2>Ławka</h2>
                    <ol class="bench-list">
                        <li>A</li>
                        <li>B</li>
                        <li>C</li>
                        <li>D</li>
                        <li>E</li>
                    </ol>
                </div>
            </div>
        </div>

        <!-- Sekcja: Punkty -->
        <div id="points" class="content-section">
            <h1>Punkty</h1>
            <h4> ###Nazwa zespołu###</h4>
            <p>Miejsce w rankingu: 1</p>
            <div class="points-layout">
                <img src="https://tortytorty.pl/18308-medium_default/boisko-wydruk-na-oplatku.jpg" alt="Boisko" class="team-image" />
                
                <div class="bench">
                    <h2>Ławka</h2>
                    <ol class="bench-list">
                        <li>A</li>
                        <li>B</li>
                        <li>C</li>
                        <li>D</li>
                        <li>E</li>
                    </ol>
                </div>
            </div>
        </div>


        <!-- Sekcja: Transfery -->
        <div id="transfers" class="content-section">
            <h1>Transfery</h1>
            <h4>Liczba transferów:</h4>
            <p>### nazwa zespołu###</p>
            <div class="team-layout">
                <img src="https://tortytorty.pl/18308-medium_default/boisko-wydruk-na-oplatku.jpg" alt="Boisko" class="team-image" />
                <div class="bench">
                    <h2>Ławka</h2>
                    <ol class="bench-list">
                        <li>A</li>
                        <li>B</li>
                        <li>C</li>
                        <li>D</li>
                        <li>E</li>
                    </ol>
                </div>
                <div class="player-list">
                    <h2>Lista zawodników</h2>
                    <select>
                        <option value="wybierz_pozycje" disabled selected hidden>Wybierz pozycję</option>
                        <option value="wszyscy_zawodnicy">Wszyscy zawodnicy</option>
                        <option value="wszyscy_zawodnicy">Watchlista</option>
                        <optgroup label="Pozycja">
                            <option value="bramkarz">Bramkarz</option>
                            <option value="obronca">Obrońca</option>
                            <option value="pomocnik">Pomocnik</option>
                            <option value="napastnik">Napastnik</option>
                        </optgroup>
                        <optgroup label="Kluby">
                            <option value="klub_1">Klub 1</option>
                            <option value="klub_2">Klub 2</option>
                        </optgroup>
                    </select>
                    <!-- Okno do wyboru zawodników w przyszłości -->
                    <div class="player-selection">
                        <p>Tu będzie możliwość wyboru zawodników.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
